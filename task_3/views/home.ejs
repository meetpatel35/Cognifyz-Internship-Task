<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Expense Tracker</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<style>
    body {
        background-image: url("https://img.freepik.com/free-vector/blank-blue-halftone-background_53876-114592.jpg?semt=ais_hybrid");
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }

    .nav-head {
        color: blue;
        font-size: 22px;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-weight: bold;
    }

    .nav-element {
        font-size: 18px;
    }

    .nav-element:hover {
        font-weight: 500;
    }

    .keyframe-cont {
        width: 50%;
    }

    @media (max-width: 1000px) {
        .keyframe-cont {
            width: 75%;
        }
    }

    .cards {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
    }
</style>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <img src="https://m.media-amazon.com/images/I/614y4xnqgdL.png" width="40px" style="margin-right:15px;"
                alt="">
            <a class="navbar-brand nav-head" href="/">Expense-Tracker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-element" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-element" href="/about">About</a>
                    </li>
                </ul>
                <button class="btn btn-danger">Logout</button>
            </div>
        </div>
    </nav>


    <div class="container my-3 keyframe-cont">
        <h2 class="text-center mb-4">
            <span class="toggle-text"></span>
        </h2>
        <form id="expenseForm" action="/submit-expense" method="POST" class="card p-4 shadow">
            <div class="mb-3">
                <label for="expenseName" class="form-label">Expense Name</label>
                <input type="text" id="expenseName" name="expenseName" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="expenseType" class="form-label">Expense Type</label>
                <select id="expenseType" name="expenseType" class="form-select" required>
                    <option value="Food">Food</option>
                    <option value="Transport">Transport</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Utilities">Utilities</option>
                    <option value="Others">Others</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="expenseAmount" class="form-label">Amount</label>
                <input type="number" id="expenseAmount" name="expenseAmount" class="form-control" required min="1">
            </div>
            <div class="mb-3">
                <label for="expenseDate" class="form-label">Expense Date</label>
                <input type="date" id="expenseDate" name="expenseDate" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="expenseTime" class="form-label">Expense Time</label>
                <input type="time" id="expenseTime" name="expenseTime" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit Expense</button>
        </form>
    </div>

    <h2 style="text-align: center; margin: 20px;">My Expenses</h2>

    <div class="cards">
        <div class="card" style="width: 18rem; margin: 20px;">
            <div class="card-body">
                <h5 class="card-title">Fees</h5>
                <p class="card-text mb-1">Type : Other</p>
                <p class="card-text mb-1">Amount : 12345</p>
                <p class="card-text mb-1">expenseTime: '22:27'</p>
                <p class="card-text mb-1">expenseDate: '2024-12-19'</p>
                <a href="#" class="btn btn-secondary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
        <div class="card" style="width: 18rem; margin: 20px;">
            <div class="card-body">
                <h5 class="card-title">Grocery</h5>
                <p class="card-text mb-1">Type : Grocery</p>
                <p class="card-text mb-1">Amount : 432</p>
                <p class="card-text mb-1">expenseTime: '18:58'</p>
                <p class="card-text mb-1">expenseDate: '2024-12-19'</p>
                <a href="#" class="btn btn-secondary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
        <div class="card" style="width: 18rem; margin: 20px;">
            <div class="card-body">
                <h5 class="card-title">college expenses</h5>
                <p class="card-text mb-1">Type : Others</p>
                <p class="card-text mb-1">Amount : 1200</p>
                <p class="card-text mb-1">expenseTime: '16:23'</p>
                <p class="card-text mb-1">expenseDate: '2024-11-30'</p>
                <a href="#" class="btn btn-secondary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>

    <script>
        const form = document.getElementById('expenseForm');
        form.addEventListener('submit', (event) => {
            const name = document.getElementById('expenseName').value.trim();
            const amount = document.getElementById('expenseAmount').value;

            if (!name || name.length < 3) {
                alert('Expense name must be at least 3 characters long.');
                event.preventDefault();
                return;
            }

            if (amount <= 0) {
                alert('Expense amount must be greater than 0.');
                event.preventDefault();
            }
        });
        const options = {
            strings: ["Add your daily Expenses here", "Manage your finances with ease."],
            typeSpeed: 55,
            backSpeed: 50,
            loop: true,
        };
        new Typed(".toggle-text", options);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>